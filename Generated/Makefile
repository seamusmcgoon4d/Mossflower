# GNU Make workspace makefile autogenerated by Premake

ifndef config
  config=debug
endif

ifndef verbose
  SILENT = @
endif

ifeq ($(config),debug)
  MossflowerLibrary_config = debug
  MossflowerExecutable_config = debug
endif
ifeq ($(config),release)
  MossflowerLibrary_config = release
  MossflowerExecutable_config = release
endif
ifeq ($(config),test)
  MossflowerLibrary_config = test
  GoogleTest_config = test
  MossflowerTests_config = test
endif

PROJECTS := MossflowerLibrary MossflowerExecutable GoogleTest MossflowerTests

.PHONY: all clean help $(PROJECTS) 

all: $(PROJECTS)

MossflowerLibrary:
ifneq (,$(MossflowerLibrary_config))
	@echo "==== Building MossflowerLibrary ($(MossflowerLibrary_config)) ===="
	@${MAKE} --no-print-directory -C . -f MossflowerLibrary.make config=$(MossflowerLibrary_config)
endif

MossflowerExecutable: MossflowerLibrary
ifneq (,$(MossflowerExecutable_config))
	@echo "==== Building MossflowerExecutable ($(MossflowerExecutable_config)) ===="
	@${MAKE} --no-print-directory -C . -f MossflowerExecutable.make config=$(MossflowerExecutable_config)
endif

GoogleTest:
ifneq (,$(GoogleTest_config))
	@echo "==== Building GoogleTest ($(GoogleTest_config)) ===="
	@${MAKE} --no-print-directory -C . -f GoogleTest.make config=$(GoogleTest_config)
endif

MossflowerTests: MossflowerLibrary GoogleTest
ifneq (,$(MossflowerTests_config))
	@echo "==== Building MossflowerTests ($(MossflowerTests_config)) ===="
	@${MAKE} --no-print-directory -C . -f MossflowerTests.make config=$(MossflowerTests_config)
endif

clean:
	@${MAKE} --no-print-directory -C . -f MossflowerLibrary.make clean
	@${MAKE} --no-print-directory -C . -f MossflowerExecutable.make clean
	@${MAKE} --no-print-directory -C . -f GoogleTest.make clean
	@${MAKE} --no-print-directory -C . -f MossflowerTests.make clean

help:
	@echo "Usage: make [config=name] [target]"
	@echo ""
	@echo "CONFIGURATIONS:"
	@echo "  debug"
	@echo "  release"
	@echo "  test"
	@echo ""
	@echo "TARGETS:"
	@echo "   all (default)"
	@echo "   clean"
	@echo "   MossflowerLibrary"
	@echo "   MossflowerExecutable"
	@echo "   GoogleTest"
	@echo "   MossflowerTests"
	@echo ""
	@echo "For more information, see https://github.com/premake/premake-core/wiki"